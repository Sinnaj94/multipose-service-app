<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
>
    <de.hdodenhof.circleimageview.CircleImageView app:layout_constraintTop_toTopOf="parent" android:id="@+id/thumbnail"
                                                  app:layout_constraintLeft_toLeftOf="parent"
                                                  android:layout_width="56dp"
                                                  android:layout_height="56dp"

                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  android:layout_margin="18dp"/>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  app:layout_constraintLeft_toRightOf="@id/thumbnail"
                  app:layout_constraintTop_toTopOf="@+id/thumbnail" android:orientation="vertical"
                  app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
                  app:layout_constraintStart_toEndOf="@+id/thumbnail" android:layout_marginLeft="20dp"
                  app:layout_constraintRight_toLeftOf="@+id/job_problem">
        <TextView
                android:text="TextView"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/job_name"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:visibility="gone"
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/job_date"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/job_name"
                android:layout_marginTop="10dp" android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginBottom="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/job_stage"
                  android:textAllCaps="true"
                  android:visibility="visible"
                  android:text="finished" android:textSize="10sp" android:fontFamily="sans-serif-black"/>
    </LinearLayout>
    <ProgressBar
            app:layout_constraintLeft_toRightOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:indeterminate="false"
            android:layout_height="wrap_content"
            android:id="@+id/progress_job"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="8dp" android:paddingRight="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_warning_24"
            android:id="@+id/job_problem" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>