<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:padding="8dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <ImageView app:layout_constraintTop_toTopOf="parent" android:id="@+id/thumbnail"
               app:layout_constraintLeft_toLeftOf="parent" android:layout_width="100dp"
               android:layout_height="100dp"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  app:layout_constraintLeft_toRightOf="@id/thumbnail" android:layout_marginLeft="10dp"
                  app:layout_constraintTop_toTopOf="@+id/thumbnail" android:orientation="vertical"
                  app:layout_constraintBottom_toBottomOf="@+id/thumbnail">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/job_name"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/job_date"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/job_name"
                android:layout_marginTop="10dp" android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/job_status"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/job_date"
                android:layout_marginTop="10dp" android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="sans-serif-light"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>