<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SendJobActivity">
    <VideoView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/video_view"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    <LinearLayout
            android:showDividers="middle"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:divider="@drawable/empty_tall_divider"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/video_view"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <Button
                android:backgroundTint="@android:color/holo_red_light"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cancel_action" android:layout_weight="1"/>
        <Button
                android:text="@string/analyse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/analyse_action" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>